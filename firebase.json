{
  "hosting": {
    "public": "my-rhyme-app/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/analyze",
        "run": {
          "serviceId": "my-rhyme-app-py",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/analyze",
        "run": {
          "serviceId": "my-rhyme-app-py",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
