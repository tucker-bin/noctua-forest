{
  "name": "rhymetime-games",
  "version": "1.0.0",
  "description": "RhymeTime Games: Rhyme Mahjong MVP - A revolutionary 3D tile-matching puzzle game using traditional Mahjong mechanics with sophisticated rhyme detection. Features star-based progression (0-155 stars), mistake-based scoring, and English-focused gameplay.",
  "keywords": [
    "rhyme mahjong",
    "3d tile matching", 
    "mahjong puzzle",
    "rhyme detection",
    "word puzzles",
    "star progression",
    "tile matching",
    "linguistic puzzles",
    "mahjong mechanics",
    "rhyming games"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd node-backend && npm run dev",
    "build": "vite build",
    "start": "cd node-backend && npm start",
    "stop": "npx kill-port 5174 3001",
    "restart": "npm run stop && npm run dev",
    "test": "concurrently \"vitest\" \"cd node-backend && npm test\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "analyze-assets": "node scripts/analyze-unused-assets.js",
    "check:emotion": "findstr /s /i /c:\"@emotion/react\" /c:\"@emotion/styled\" src\\*.tsx src\\*.ts || echo 'No Emotion imports found.'",
    "optimize": "npm run check:emotion && node scripts/optimize-assets.js",
    "clean": "node scripts/optimize-assets.js"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/d3": "^7.4.3",
    "@types/d3-force": "^3.0.10",
    "@types/firebase": "^2.4.32",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/stripe": "^8.0.416",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.0",
    "d3": "^7.9.0",
    "d3-force": "^3.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "kill-port": "^2.0.1",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^2.0.4",
    "workbox-build": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@google-cloud/translate": "^8.0.2",
    "@mui/icons-material": "^5.15.15",
    "@mui/material": "^5.15.15",
    "@stripe/stripe-js": "^4.1.0",
    "@types/html2canvas": "^0.5.35",
    "firebase": "^10.12.2",
    "framer-motion": "^11.2.10",
    "html2canvas": "^1.4.1",
    "i18next": "^23.11.5",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.2",
    "react-router-dom": "^6.23.1",
    "recharts": "^2.15.4",
    "web-vitals": "^4.2.0",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  }
}
